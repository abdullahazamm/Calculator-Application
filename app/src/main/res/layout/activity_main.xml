<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        >


        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabSelectedTextColor="@color/teal"
            app:tabTextColor="@color/teal">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculator" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exchange Rate"

                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Converter" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">


        <Button
            android:id="@+id/button5"
            android:drawableRight="@drawable/ic_baseline_access_time_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:text="" />

        <Button
            android:id="@+id/button6"
            android:drawableRight="@drawable/ic_baseline_fullscreen_exit_24"            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:text="" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDFDFE"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="C"
                android:textColor="@color/teal"
                android:textSize="40sp" />


            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="%"
                android:textSize="40dp"
                android:textColor="@color/teal"
                />



            <Button
                android:id="@+id/button3"
                android:drawableRight="@drawable/ic_baseline_cancel_24"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text=""
                android:textSize="40dp"
                android:textColor="@color/teal"
                />



            <Button
                android:id="@+id/button4"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="รท"
                android:textSize="40dp"
                android:textColor="@color/teal"
                />
        </LinearLayout>















        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            >


            <Button
                android:id="@+id/buttonn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="7"
                android:textSize="40dp"
                android:textColor="@color/black"
                />


            <Button
                android:id="@+id/buttonn2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="8"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="9"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonn4"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="X"
                android:textSize="40dp"
                android:textColor="@color/teal"
                />
        </LinearLayout>





















        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp">


            <Button
                android:id="@+id/buttonnn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="4"
                android:textSize="40dp"
                android:textColor="@color/black"
                />


            <Button
                android:id="@+id/buttonnn2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="5"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonnn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="6"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonnn4"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="-"
                android:textSize="40dp"
                android:textColor="@color/teal"
                />
        </LinearLayout>



















        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp">


            <Button
                android:id="@+id/buttonnnn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="1"
                android:textSize="40sp"
                android:textColor="@color/black"
                />


            <Button
                android:id="@+id/buttonnnn2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="2"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonnnn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="3"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonnnn4"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/teal"
                />
        </LinearLayout>











        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp">


            <Button
                android:id="@+id/buttonnnnn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="00"
                android:textSize="40sp"
                android:textColor="@color/black"
                />


            <Button
                android:id="@+id/buttonnnnn2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="0"
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonnnnn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="."
                android:textSize="40dp"
                android:textColor="@color/black"
                />



            <Button
                android:id="@+id/buttonnnnn4"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EDFDFE"
                android:text="="
                android:textSize="40dp"
                android:textColor="@color/teal"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
